<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/activity_generator"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.hwyncho.passwordmanager.GeneratorActivity">

	<include
		android:id="@+id/content_generator_option"
		layout="@layout/content_generator_option"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"/>

	<include
		layout="@layout/content_generator_result"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentStart="true"
		android:layout_below="@+id/content_generator_option"/>

	<include
		layout="@layout/conetent_generator_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentEnd="true"
		android:layout_alignParentStart="true"/>
</RelativeLayout>